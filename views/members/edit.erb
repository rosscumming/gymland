<form  action="/members/<%= @member.id %>" method="POST">
  <input type="text" name="first_name" value="<%=@member.first_name.capitalize%>" id="first-name" placeholder="First name" required>
  <input type="text" name="last_name" value="<%=@member.last_name.capitalize%>" id="last-name" placeholder="Last name" required>
  <input type="text" name="gender" value="<%=@member.gender.capitalize%>" id="gender" placeholder="Gender" required>
  <input type="text" name="dob" value="<%=@member.dob%>" id="dob" placeholder="Date of birth" required>
  <input type="text" name="address" value="<%=@member.address.capitalize%>" id="address" placeholder="Address" required>
  <input type="text" name="post_code" value="<%=@member.post_code.upcase%>" id="post-code" placeholder="Post code" required>
  <input type="text" name="email" value="<%=@member.email%>" id="email" placeholder="Email" required>
  <input type="text" name="phone_number" value="<%=@member.phone_number%>" id="phone-number" placeholder="Phone number" required>
  <br>
  <button class="back-btn"><a href="/members/<%= @member.id %>">BACK</a></button>
  <input class="submit-btn" type="submit" value="UPDATE">
</form>
