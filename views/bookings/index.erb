<h2>Book new session</h2>

<form action="/bookings" method="post">
  <label>
  Select a member:
    <select name="member_id">
      <% for member in @members %>
      <option value="<%= member.id %>"><%=member.first_name%> <%=member.last_name%></option>
      <% end %>
    </select>
  </label>

  <label>
    Select a session:
    <select name="session_id">
      <% for session in @sessions %>
      <option value="<%= session.id %>"><%= session.session_name %></option>
      <% end %>
    </select>
  </label>

  <input class="btn btn--action" type='submit' value="submit">
</form>


<h2> Sessions booked </h2>
<ul>
  <% for booking in @bookings %>
  <li>
    <% for session in @sessions %>
    <%= session.session_name if session.id == booking.session_id %>
    <% end %> -
    <% for member in @members %>
    <%= "#{member.first_name} #{member.last_name}" if member.id == booking.member_id %>

    <% end %>
  </li>
  <% end %>
</ul>
